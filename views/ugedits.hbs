    <div class="containter mt-4">

      <div class="col-12">
        <div class="car text-center">
          <div class="card-header">
            Browse Internships
          </div>
          {{#if message1}}
            <h4 class="alert alert-danger mt-4 text-left">{{message1}}</h4>
          {{/if}}
          {{#if message2}}
            <h4 class="alert alert-success mt-4 text-left">{{message2}}</h4>
          {{/if}}

          <table id="internshipTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th class="th-sm">Company
                </th>
                <th class="th-sm">Position
                </th>
                <th class="th-sm">Eligibility
                </th>
                <th class="th-sm">Date Added
                </th>
                <th class="th-sm">URL
                </th>
                <th class="th-sm">Edit
                </th>
                <th style="th-sm">Delete</th>
              </tr>
            </thead>
            <tbody>
              {{#each jobs}}
                <tr>
                  <td>{{company_name}}</td>
                  <td>{{internship_title}}</td>
                  <td>{{eligibility}}</td>
                  <td>{{date_added}}</td>
                  <td><a href={{link}} target="_blank" class="btn btn-success" role="button">URL</a></td>
                  <td>
                    <a type="button" data-toggle="modal" class="btn btn-success" data-target="#editModal + {{job_id}}">
                      ~
                    </a>
                    <div class="modal fade" id="editModal + {{job_id}}" tabindex="-1" role="dialog"
                      aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Make any Edits</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <div class="modal-body">
                            <form action="/auth/edit" method="POST">
                              <div class="form-group">
                                <input type="hidden" value={{job_id}} class="form-control" id="job_id" name="job_id">
                                <input type="hidden" value=2 class="form-control" id="origin" name="origin">
                              </div>
                              <t>Role Type</t>
                              <p></p>
                              <div class="form-check form-check-inline" id="typeSelect">
                                <input class="form-check-input" type="radio" name="role_type" id="internshipBox" value=1
                                  checked>
                                <label class="form-check-label" for="internshipBox">
                                  Internship
                                </label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="role_type" id="fulltimeBox" value=2 {{#if
                              is_ft}} checked {{/if}}>
                                <label class="form-check-label" for="fulltimeBox">
                                  New-Grad
                                </label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="role_type" id="epBox" value=3 {{#if
                              is_ep}} checked {{/if}}>
                                <label class="form-check-label" for="epBox">
                                  Exploratory Program/Summit
                                </label>
                              </div>
                              <t>This role is for:</t>
                              <p></p>
                              <div class="form-check form-check-inline" id="typeSelect">
                                <input class="form-check-input" type="radio" name="class_type" id="ugradBox" value=1
                                  checked>
                                <label class="form-check-label" for="ugradBox">
                                  Undergrads
                                </label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="class_type" id="gradBox" value=2 {{#if
                              is_grad}} checked {{/if}}>
                                <label class="form-check-label" for="gradBox">
                                  Grad Students
                                </label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="class_type" id="bothBox" value=3 {{#if
                              is_ugrad}}{{#if is_grad}} checked {{/if}} {{/if}}>
                                <label class="form-check-label" for="bothBox">
                                  Both
                                </label>
                              </div>
                              <p></p>
                              <div class="form-group">
                                <label for="company_name">Company</label>
                                <input type="text" placeholder="Company Name" value="{{company_name}}"
                                  class="form-control" id="company_name" name="company_name" required>
                              </div>
                              <div class="form-group">
                                <label for="internship_title">Title</label>
                                <input type="text" placeholder="Title" value="{{internship_title}}" class="form-control"
                                  id="internship_title" name="internship_title" required>
                              </div>
                              <div class="form-group">
                                <label for="link">URL</label>
                                <input type="text" placeholder="link" value={{link}} class="form-control" id="link"
                                  name="link">
                              </div>
                              <div class="form-group">
                                <label for="international_allowed">Int'l Students?</label>
                                <input type="text" placeholder="Int'l Students?" value={{international_allowed}}
                                  class="form-control" id="international_allowed" name="international_allowed" required>
                              </div>
                              <div class="form-check form-check-inline">
                                <input type="hidden" name="swe_tag" value="0">
                                {{#if swe_tag}}
                                  <input type="checkbox" checked="checked" value="1" name="swe_tag" id="swe_tag">
                                {{else}}
                                  <input type="checkbox" value="1" name="swe_tag" id="swe_tag">
                                {{/if}}
                                <label for="swe_tag">SWE Tag</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input type="hidden" name="swe_web_tag" value="0">
                                {{#if swe_web_tag}}
                                  <input type="checkbox" checked="checked" value="1" name="swe_web_tag"
                                    id="swe_web_tag">
                                {{else}}
                                  <input type="checkbox" value="1" name="swe_web_tag" id="swe_web_tag">
                                {{/if}}
                                <label for="swe_web_tag">SWE-Web Tag</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input type="hidden" name="swe_backend_tag" value="0">
                                {{#if swe_backend_tag}}
                                  <input type="checkbox" checked="checked" value="1" name="swe_backend_tag"
                                    id="swe_backend_tag">
                                {{else}}
                                  <input type="checkbox" value="1" name="swe_backend_tag" id="swe_backend_tag">
                                {{/if}}
                                <label for="swe_backend_tag">SWE-Backend Tag</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input type="hidden" name="swe_mobile_tag" value="0">
                                {{#if swe_mobile_tag}}
                                  <input type="checkbox" checked="checked" value="1" name="swe_mobile_tag"
                                    id="swe_mobile_tag">
                                {{else}}
                                  <input type="checkbox" value="1" name="swe_mobile_tag" id="swe_mobile_tag">
                                {{/if}}
                                <label for="swe_mobile_tag">SWE-Mobile Tag</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input type="hidden" name="dsci_tag" value="0">
                                {{#if dsci_tag}}
                                  <input type="checkbox" checked="checked" value="1" name="dsci_tag" id="dsci_tag">
                                {{else}}
                                  <input type="checkbox" value="1" name="dsci_tag" id="dsci_tag">
                                {{/if}}
                                <label for="dsci_tag">DSCI Tag</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input type="hidden" name="devops_tag" value="0">
                                {{#if devops_tag}}
                                  <input type="checkbox" checked="checked" value="1" name="devops_tag" id="devops_tag">
                                {{else}}
                                  <input type="checkbox" value="1" name="devops_tag" id="devops_tag">
                                {{/if}}
                                <label for="devops_tag">DevOps Tag</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input type="hidden" name="consulting_tag" value="0">
                                {{#if consulting_tag}}
                                  <input type="checkbox" checked="checked" value="1" name="consulting_tag"
                                    id="consulting_tag">
                                {{else}}
                                  <input type="checkbox" value="1" name="consulting_tag" id="consulting_tag">
                                {{/if}}
                                <label for="consulting_tag">Consulting Tag</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input type="hidden" name="cyber_tag" value="0">
                                {{#if cyber_tag}}
                                  <input type="checkbox" checked="checked" value="1" name="cyber_tag" id="cyber_tag">
                                {{else}}
                                  <input type="checkbox" value="1" name="cyber_tag" id="cyber_tag">
                                {{/if}}
                                <label for="cyber_tag">Cyber Tag</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input type="hidden" name="networks_tag" value="0">
                                {{#if networks_tag}}
                                  <input type="checkbox" checked="checked" value="1" name="networks_tag"
                                    id="networks_tag">
                                {{else}}
                                  <input type="checkbox" value="1" name="networks_tag" id="networks_tag">
                                {{/if}}
                                <label for="networks_tag">Networks Tag</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input type="hidden" name="pm_tag" value="0">
                                {{#if pm_tag}}
                                  <input type="checkbox" checked="checked" value="1" name="pm_tag" id="pm_tag">
                                {{else}}
                                  <input type="checkbox" value="1" name="pm_tag" id="pm_tag">
                                {{/if}}
                                <label for="pm_tag">PM Tag</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input type="hidden" name="ux_tag" value="0">
                                {{#if ux_tag}}
                                  <input type="checkbox" checked="checked" value="1" name="ux_tag" id="ux_tag">
                                {{else}}
                                  <input type="checkbox" value="1" name="ux_tag" id="ux_tag">
                                {{/if}}
                                <label for="ux_tag">UX Tag</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input type="hidden" name="ba_tag" value="0">
                                {{#if ba_tag}}
                                  <input type="checkbox" checked="checked" value="1" name="ba_tag" id="ba_tag">
                                {{else}}
                                  <input type="checkbox" value="1" name="ba_tag" id="ba_tag">
                                {{/if}}
                                <label for="ba_tag">Analytics Tag</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input type="hidden" name="it_tag" value="0">
                                {{#if it_tag}}
                                  <input type="checkbox" checked="checked" value="1" name="it_tag" id="it_tag">
                                {{else}}
                                  <input type="checkbox" value="1" name="it_tag" id="it_tag">
                                {{/if}}
                                <label for="it_tag">IT Analyst Tag</label>
                              </div>

                              <div class="form-check">
                                <input type="hidden" name="juniors_only" value="0">
                                {{#if juniors_only}}
                                  <input type="checkbox" checked="checked" value="1" name="juniors_only"
                                    id="juniors_only">
                                {{else}}
                                  <input type="checkbox" value="1" name="juniors_only" id="juniors_only">
                                {{/if}}
                                <label for="juniors_only">'24 Only?</label>
                              </div>

                              <div class="form-check">
                                <input type="hidden" name="is_ug" value="0">
                                {{#if is_ug}}
                                  <input type="checkbox" checked="checked" value="1" name="is_ug" id="is_ug">
                                {{else}}
                                  <input type="checkbox" value="1" name="is_ug" id="is_ug">
                                {{/if}}
                                <label for="is_ug">UG?</label>
                              </div>

                              <div class="form-check">
                                <input type="hidden" name="is_uc" value="0">
                                {{#if is_uc}}
                                  <input type="checkbox" checked="checked" value="1" name="is_uc" id="is_uc">
                                {{else}}
                                  <input type="checkbox" value="1" name="is_uc" id="is_uc">
                                {{/if}}
                                <label for="is_uc">UC?</label>
                              </div>

                              <div class="form-group">
                                <label for="eligibility">Eligibile Groups (if Applicable):</label>
                                <input type="text" {{#if eligibility}} value="{{eligibility}}" {{else}} value="" {{/if}}
                                  class="form-control" id="eligibility" name="eligibility">
                              </div>
                              <div class="form-group">
                                <label for="event_dates">Event Dates (if Applicable):</label>
                                <input type="text" {{#if event_dates}} value="{{event_dates}}" {{else}} value="" {{/if}}
                                  class="form-control" id="event_dates" name="event_dates">
                              </div>
                          </div>
                          <button type="submit" class="btn btn-primary">Edit</button>
                          </form>

                        </div>

                      </div>
                    </div>

                  </td>
                  <td>
                    <form action="/auth/deleteListing" method="POST">
                      <input type="hidden" value=2 class="form-control" id="origin" name="origin">
                      <input type="hidden" value="{{company_name}}" class="form-control" id="company_name"
                        name="company_name">
                      <input type="hidden" value="{{internship_title}}" class="form-control" id="internship_title"
                        name="internship_title">
                      <button name="job_id" class="btn btn-danger" value={{job_id}}>-</button>
                    </form>
                  </td>

                </tr>
              {{/each}}


            </tbody>

            <tfoot>
              <tr>
                <th class="th-sm">Company
                </th>
                <th class="th-sm">Position
                </th>
                <th class="th-sm">Eligibility
                </th>
                <th class="th-sm">Date Added
                </th>
                <th class="th-sm">URL
                </th>
                <th class="th-sm">Edit
                </th>
                <th style="th-sm">Delete</th>
              </tr>
            </tfoot>
            <script>
              $(document).ready(function () {
                $('#internshipTable').DataTable({
                  "order": [[3, "desc"]]
                });
              });
            </script>
          </table>


        </div>
      </div>

    </div>

  </body>
